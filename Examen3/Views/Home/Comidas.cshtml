@model IEnumerable<Examen3.Models.Platillo>
@{
    ViewData["Title"] = "Comidas";
}

<div class="container">
    <div class="row">
        <div class="col-12 d-flex justify-content-center">
            <h2 class="titlo">Comidas</h2>
        </div>
        <div class="col-12 d-flex justify-content-center">
            <h2 class="titlo-divisor"></h2>
        </div>
    </div>
    <div class="row">
        @if (Model.Count() > 0)
        {
            foreach (var comida in Model.Where(o => o.IdCategoria == 2))
            {
                <div class="col-sm-12 col-md-4">
                    <div class="card carta" style="width: 18rem;">
                        <img src="/@comida.UrlImagen" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@comida.Nombre</h5>
                            <p class="card-text">Precio:$@comida.Precio</p>
                        </div>
                    </div>

                </div>
            }
        }
    </div>
</div>
